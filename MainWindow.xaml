<Window x:Class="CapturadorIntegrado_v3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Capturador Integrado v3" Height="720" Width="1180"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Config -->
            <RowDefinition Height="Auto"/>
            <!-- Botonera -->
            <RowDefinition Height="2*"/>
            <!-- Log -->
            <RowDefinition Height="*"/>
            <!-- Thumbs -->
        </Grid.RowDefinitions>

        <!-- CONFIG -->
        <GroupBox Header="ConfiguraciÃ³n" Padding="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="32"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Ventana objetivo:"/>
                <TextBox  x:Name="TbTarget" Grid.Row="0" Grid.Column="1" Margin="6,0" />
                <Button   Grid.Row="0" Grid.Column="2" Margin="6,0" Content="Buscar" Click="BtnBuscar_Click"/>

                <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="Prefijo de captura:"/>
                <TextBox  x:Name="TbPrefix" Grid.Row="1" Grid.Column="1" Margin="6,0" />

                <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="Destino de capturas:"/>
                <TextBox  x:Name="TbDest" Grid.Row="2" Grid.Column="1" Margin="6,0" />
                <Button   Grid.Row="2" Grid.Column="2" Margin="6,0" Content="Examinar..." Click="BtnBrowse_Click"/>

                <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Text="Escala:"/>
                <ComboBox x:Name="CmbScale" Grid.Row="3" Grid.Column="1" Margin="6,0" Width="120" />
            </Grid>
        </GroupBox>

        <!-- BOTONERA -->
        <Grid Grid.Row="1" Margin="0,8,0,4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="170"/>
                <ColumnDefinition Width="170"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="170"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="160"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="BtnStart" Grid.Column="0" Height="34" Content="Iniciar (F11)" Click="BtnStart_Click"/>
            <Button x:Name="BtnCapture" Grid.Column="1" Margin="8,0,0,0" Height="34" Content="Capturar (F12)" Click="BtnCapture_Click"/>
            <Button x:Name="BtnPauseResume" Grid.Column="2" Margin="8,0,0,0" Height="34" Content="Pausa/Reanudar (F10)" Click="BtnPause_Click"/>
            <Button x:Name="BtnEnd" Grid.Column="3" Margin="8,0,0,0" Height="34" Content="Terminar" Click="BtnEnd_Click"/>
            <Label  Grid.Column="5" x:Name="LblStatus" Height="34" VerticalContentAlignment="Center"
                    HorizontalContentAlignment="Center" Content="Inactivo" Background="#FFDCDCDC" />
        </Grid>

        <!-- LOG -->
        <TextBox x:Name="TbLog" Grid.Row="2" Margin="0,4,0,8" IsReadOnly="True" TextWrapping="NoWrap"
                 VerticalScrollBarVisibility="Auto" FontFamily="Consolas" FontSize="12"/>

        <!-- THUMBS -->
        <ListBox x:Name="LbThumbs" Grid.Row="3" MouseDoubleClick="OnThumbDoubleClick"/>
    </Grid>
</Window>
