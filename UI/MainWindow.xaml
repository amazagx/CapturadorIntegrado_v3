<Window x:Class="CapturadorIntegrado_v3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Capturador Integrado v3.1 (refactor)" Height="720" Width="1080">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="160"/>
        </Grid.RowDefinitions>

        <!-- Row 0: Target + Prefix + Dest + Screen + Scale -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8" VerticalAlignment="Center" >
            <TextBlock Text="Ventana:" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <TextBox x:Name="TbTarget" Width="280" Margin="0,0,10,0"/>
            <TextBlock Text="Prefijo:" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <TextBox x:Name="TbPrefix" Width="160" Margin="0,0,10,0"/>
            <TextBlock Text="Destino:" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <TextBox x:Name="TbDest" Width="280" Margin="0,0,6,0"/>
            <Button x:Name="BtnBrowse" Content="..." Width="28" Click="BtnBrowse_Click" Margin="0,0,10,0"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,8" VerticalAlignment="Center">
            <TextBlock Text="Pantalla:" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <ComboBox x:Name="CmbScreen" Width="220" Margin="0,0,10,0"/>
            <TextBlock Text="Escala:" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <ComboBox x:Name="CmbScale" Width="100" Margin="0,0,10,0"/>
            <Button x:Name="BtnBuscar" Content="Buscar ventana" Width="130" Click="BtnBuscar_Click" Margin="0,0,8,0"/>
            <Button x:Name="BtnProbe" Content="Probar objetivo" Width="130" Click="BtnProbe_Click" Margin="0,0,8,0"/>
            <Button x:Name="BtnStart" Content="F11 / Iniciar" Width="120" Click="BtnStart_Click" Margin="0,0,8,0"/>
            <Button x:Name="BtnCapture" Content="F12 / Capturar" Width="120" Click="BtnCapture_Click" Margin="0,0,8,0"/>
            <Button x:Name="BtnPauseResume" Content="F10 / Pausa" Width="120" Click="BtnPause_Click" Margin="0,0,8,0"/>
            <Button x:Name="BtnEnd" Content="Terminar" Width="100" Click="BtnEnd_Click"/>
            <TextBlock x:Name="LblStatus" Text="Inactivo" FontWeight="Bold" Margin="12,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Row 2: Log -->
        <TextBox x:Name="TbLog" Grid.Row="2" Margin="0,0,0,8" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" TextWrapping="NoWrap"/>

        <!-- Row 3: Thumbnails -->
        <ListBox x:Name="LbThumbs" Grid.Row="3" MouseDoubleClick="OnThumbDoubleClick"/>
    </Grid>
</Window>